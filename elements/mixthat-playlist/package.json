{
  "name": "@firstcoders/mixthat-playlist",
  "description": "Webcomponent mixthat-playlist following open-wc recommendations",
  "license": "MIT",
  "private": true,
  "author": "mixthat-playlist",
  "version": "0.0.5-beta.4",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": "./index.js",
    "./mixthat-playlist.js": "./mixthat-playlist.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch"
  },
  "dependencies": {
    "@firstcoders/element-styles": "workspace:^",
    "@firstcoders/mixthat-player": "workspace:^",
    "@stemplayer-js/stemplayer-js": "workspace:^",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/eslint-config": "^9.2.2",
    "@open-wc/testing": "^4.0.0",
    "@web/dev-server": "^0.4.5",
    "@web/test-runner": "^0.18.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
